@{
    ViewData["Title"] = "Catalogo-InfoJobs";
}


<nav>
    <h1>Búsqueda de Trabajos</h1>

    <form asp-action="busqueda">
        <div>
            @Html.Label("Busca por nombre:")
            @Html.TextBox("nombre","", new{@class="form-control"})
        </div>

        <div class="form-group">
            @Html.Label("Tipo de trabajo:")
            @Html.DropDownList("id_categoria",ViewData["listaCategoria"]as SelectList , "Todos", new{@class="form-control"})
        </div>

        <div class="form-group">
            @Html.Label("Ubicación")
            @Html.DropDownList("id_ubicacion",ViewData["listaDepartamentos"]as SelectList , "Cualquiera", new{@class="form-control"})
        </div>

        <div class="form-group">
            @Html.Label("Fecha de publicacion")
            <input type="date" id="start" name="trip-start" value="2023-05-30" min="2023-01-01" max="2023-05-24">
        </div>

        <button type="submit" class="btn btn-primary my-3">Buscar</button>
    </form>
</nav>


